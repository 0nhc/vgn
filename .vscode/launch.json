    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/generate_data.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "--root=data/debug",
            ]
        },
        {
            "name": "Display Scene",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/display_scene.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "--scene=data/debug/foo",
            ]
        },
        {
            "name": "Train VGN",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/train_vgn.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "--data-dir=data/debug",
            ]
        },
    ]
}