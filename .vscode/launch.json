    "version": "0.2.0",
    "configurations": [
        {
            "name": "generate_data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/generate_data.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "--root=data/debug",
                "--sim-gui",
                "--rtf=-1"
            ]
        },
        {
            "name": "display_data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/display_data.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "data/debug/.npz",
            ]
        },
        {
            "name": "train_vgn",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vgn/scripts/train_vgn.py",
            "cwd": "${workspaceFolder}/vgn",
            "console": "integratedTerminal",
            "args": [
                "--data-dir=data/debug",
            ]
        },
    ]
}